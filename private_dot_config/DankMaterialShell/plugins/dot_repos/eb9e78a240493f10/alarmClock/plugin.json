{
    "$schema": "https://github.com/AvengeMedia/DankMaterialShell/raw/refs/heads/master/PLUGINS/plugin-schema.json",
    "id": "alarmClock",
    "name": "Alarm Clock",
    "description": "An alarm clock widget in its early stages",
    "version": "0.3.2",
    "author": "lucyfire",
    "icon": "alarm",
    "type": "widget",
    "capabilities": [
        "alarmclock",
        "stopwatch",
        "timer"
    ],
    "component": "./AlarmClockWidget.qml",
    "settings": "./AlarmClockSettings.qml",
    "requires_dms": ">=0.2.4",
    "requires": [
        "qt6-multimedia"
    ],
    "permissions": [
        "settings_read",
        "settings_write"
    ]
}
